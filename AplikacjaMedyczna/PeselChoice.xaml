<Page
    x:Class="AplikacjaMedyczna.PeselChoice"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AplikacjaMedyczna"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Width="400">
                    <TextBlock Text="Wyszukiwanie Pacjenta" HorizontalAlignment="Center" Margin="0,20,0,20" FontSize="36" FontWeight="bold" Foreground="Black" Visibility="Visible"/>
                    <TextBox x:Name="NameTextBox" Header="Imie" Margin="0,10" TextChanged="OnTextChanged"/>
                    <TextBox x:Name="SurnameTextBox" Header="Nazwisko" Margin="0,10" TextChanged="OnTextChanged"/>
                    <TextBox x:Name="AddressTextBox" Header="Adres Zamieszkania" Margin="0,10" TextChanged="OnTextChanged"/>
                    <TextBox x:Name="TelephoneTextBox" Header="Numer Kontaktowy" Margin="0,10" TextChanged="OnTextChanged"/>
                    <TextBox x:Name="PeselTextBox" TextChanged="Pesel_TextChanged" Header="PESEL" Margin="0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                        <Button x:Name="SearchButton" Content="Search" Click="OnSearchButtonClicked" IsEnabled="False" Margin="0,10"/>
                        <Button x:Name="ChoiceButton" Content="Wybierz" Click="OnWybierzButtonClicked" Margin="10,10" IsEnabled="False" />
                    </StackPanel>

                    <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="PatientsListBox" SelectionChanged="OnPatientSelected" Margin="0,20">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" />
                                        <TextBlock Text="{Binding Surname}" />
                                        <TextBlock Text="{Binding Address}" />
                                        <TextBlock Text="{Binding Telephone}" />
                                        <TextBlock Text="{Binding Pesel}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
</Page>