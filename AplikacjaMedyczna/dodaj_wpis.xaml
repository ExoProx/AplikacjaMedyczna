<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AplikacjaMedyczna.dodaj_wpis"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AplikacjaMedyczna"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <TextBox x:Name="WpisTextBox" PlaceholderText="Wprowadź wpis" Margin="0,0,0,10" />
        <Button x:Name="SubmitButton" Content="Zapisz" Click="SubmitButton_Click" Margin="0,0,0,10" />

        <!-- Komunikaty -->
        <TextBlock x:Name="SuccessMessage" Text="Wpis zapisano pomyślnie." 
                   Foreground="Green" Visibility="Collapsed" Margin="0,0,0,10" />
        <TextBlock x:Name="EmptyFieldMessage" Text="Pole wpisu nie może być puste." 
                   Foreground="Red" Visibility="Collapsed" Margin="0,0,0,10" />
        <TextBlock x:Name="ErrorDatabaseMessage" Text="Błąd połączenia z bazą danych." 
                   Foreground="Red" Visibility="Collapsed" Margin="0,0,0,10" />
    </Grid>
</Page>