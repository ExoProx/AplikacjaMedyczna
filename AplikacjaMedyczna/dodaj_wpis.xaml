<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AplikacjaMedyczna.dodaj_wpis"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AplikacjaMedyczna"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel x:Name="PanelWpisu" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Margin="20">
                <TextBlock Text="Dodaj Wpis" HorizontalAlignment="Center" Margin="0,20,0,20" FontSize="36" FontWeight="bold" Foreground="Black" Visibility="Visible"/>
                <TextBox x:Name="WpisTextBox" AutomationProperties.Name="multi-line TextBox" TextWrapping="Wrap" AcceptsReturn="True" IsSpellCheckEnabled="True" SelectionHighlightColor="Green" MinWidth="400" />
                <!-- Komunikaty -->
                <TextBlock x:Name="SuccessMessage" Text="Wpis zapisano pomyślnie." 
                           Foreground="Green" Visibility="Collapsed" Margin="0,0,0,10" />
                <TextBlock x:Name="EmptyFieldMessage" Text="Pole wpisu nie może być puste." 
                           Foreground="Red" Visibility="Collapsed" Margin="0,0,0,10" />
                <TextBlock x:Name="ErrorDatabaseMessage" Text="Błąd połączenia z bazą danych." 
                           Foreground="Red" Visibility="Collapsed" Margin="0,0,0,10" />
                <StackPanel x:Name="PanelPrzyciskow" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="CancelButton" Content="Anuluj" Click="CancelButton_Click" Margin="10,0,0,0" />
                    <Button x:Name="SubmitButton" Content="Zapisz" Click="SubmitButton_Click" Margin="10,0,0,0" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>