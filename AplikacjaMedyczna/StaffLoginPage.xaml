<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AplikacjaMedyczna.StaffLoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AplikacjaMedyczna"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock Text="Staff Login Page" />
        <StackPanel Orientation ="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="Pesel" PlaceholderText="IDPracownika" Margin="0,0,0,10" Height="40" Width="200" KeyDown="Input_KeyDown" TextChanged="Pesel_TextChanged"/>
            <PasswordBox x:Name="Password" PlaceholderText="HasÅ‚o" Margin="10,0,0,10" Height="40" Width="200" KeyDown="Input_KeyDown"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="50,0,0,10"/>
            <TextBlock x:Name="ErrorPESEL"
           Text="Invalid ID "
           Foreground="Red"
           Visibility="Collapsed"
           VerticalAlignment="Top"
           Margin="20,200,20,0"/>
            <TextBlock x:Name="ErrorPassword"
        Text="Invalid Password"
        Foreground="Red"
        Visibility="Collapsed"
        VerticalAlignment="Top"
        Margin="20,200,20,0"/>
            <TextBlock x:Name="ErrorDatabase"
        Text="ERROR WITH CONNECTION"
        Foreground="Red"
        Visibility="Collapsed"
        VerticalAlignment="Top"
         Margin="20,200,20,0"/>
            <TextBlock x:Name="ResultTextBlock" VerticalAlignment="Top" Margin="20,300,20,0"/>
        </StackPanel>
        <Button Content="Logowanie Jako pacjent" Click="MoveToLogin" 
        HorizontalAlignment="Right" VerticalAlignment="Bottom" 
        Margin="10"/>
    </Grid>
</Page>
